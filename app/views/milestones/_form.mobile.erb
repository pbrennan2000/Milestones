<%= form_for(@milestone) do |f| %>
  	<div> 
  		<%= f.error_messages %>
  	</div>
  	<fieldset data-role="fieldcontain">
		<%= f.label :name, "Milestone Name" %>
		<%= f.text_field :name, :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off', :placeholder => 'Add A New Milestone', :id => :milestone_name %>
	</fieldset>
  	<fieldset data-role="fieldcontain">
  		<%= f.label :child_id, "Select Child" %>
  		<%= f.select :child_id, @children %>
  	</fieldset>
  	<fieldset data-role="fieldcontain">
  		<%= f.label :date, "Milestone Date" %>
  		<input type="date" id="milestone_date" name="milestone[milestone_date]" value="<%=@milestone.milestone_date%>" />
	</fieldset>
	<fieldset data-role="fieldcontain">
		<%= f.label :description, "Describe this Milestone" %>
		<%= f.text_area :description, :placeholder => 'Describe this milestone, the description will be passed to Facebook or Twitter', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %>
	</fieldset>			
	<fielset data-role="fieldcontain">
		<label for="photo">Photo</label>
		<input placeholder="Attach a photo/video" id="photo" name="photo" type="file" />
	</fieldset>
	<fieldset data-role="fieldcontain">
		<%= f.submit %>
		<% if @milestone.id %>
			<%= link_to "Delete", @milestone, :method => :delete, :confirm => "Are you sure you want to delete this milestone? This action cannot be undone.", "data-role" => "button"%>
		<% end %>	
	</fieldset>
<% end %>


