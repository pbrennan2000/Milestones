<div data-role="page">
	<div data-role="header">
		<h1>Children</h1> 
		<%= link_to "Home", home_path, "data-direction" => "reverse" %>
		<%= link_to "+", new_child_path, "data-transition" => "slideup" %>
	</div>
	<div data-role="content"> 
		<ul data-role="listview">
			<% @children.each do |child| %> 
				<li>
					<%= link_to(child) do %><%= child.first_name %><% end %>
				</li> 
			<% end %>
		</ul> 
	</div> 
</div>
