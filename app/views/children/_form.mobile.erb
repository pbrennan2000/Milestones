<%= form_for(@child) do |f| %>
	<div>
  		<%= f.error_messages %>
  	</div>
  	<fieldset data-role="fieldcontain">
      	<%= f.label :first_name, "First Name" %>
      	<%= f.text_field :first_name, :id => 'first_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %>
     </fieldset>
     <fieldset data-role="fieldcontain">
      	<%= f.label :middle_name, "Middle Name" %>
      	<%= f.text_field :middle_name, :id => 'middle_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %>
      </fieldset>
      <fieldset data-role="fieldcontain">
      	<%= f.label :last_name, "Last Name" %>
      	<%= f.text_field :last_name, :id => 'last_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %>
      </fieldset>
      
    <fieldset data-role="fieldcontain">
		<%= f.submit %>
		<% if @child.id %>
			<%= link_to "Delete", @child, :method => :delete, :confirm => "Are you sure you want to delete this child This action cannot be undone and will delete associated milestones.", "data-role" => "button"%>
		<% end %>
	</fieldset>
<% end %>
