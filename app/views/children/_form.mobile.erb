<%= form_for(@child) do |f| %>
  	<ul class="edgetoedge plastic"> 
  		<li><%= f.error_messages %></li>
      	<h4>First Name</h4>
      	<li><%= f.text_field :first_name, :id => 'first_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %></li>
      	<h4>Middle Name</h4>
      	<li><%= f.text_field :middle_name, :id => 'middle_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %></li>
      	<h4>Last Name</h4>
      	<li><%= f.text_field :last_name, :id => 'last_name', :autocapitalize => 'off', :autocomplete => 'off', :autocorrect => 'off' %></li>

		<li><%= link_to "Submit", "#", {:class => 'submit greenButton'} %></li>
		<% if @child.id %>
			<li><%= link_to "Delete", @child, :method => :delete, :class => :redButton, :confirm => "Are you sure you want to delete this child This action cannot be undone and will delete associated milestones."%></li>
		<% end %>
	</ul>
<% end %>
